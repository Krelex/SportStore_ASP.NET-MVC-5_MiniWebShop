@model SportStore.Domain.Entities.Product

<div class="text-center alert alert-dark">
    @if(Model.ImageData != null)
    {
        <div class="float-left" style="margin-right: 10px">
            <img class="img-thumbnail" width="75" height="75"
                 src="~/Product/GetImage?productId=@Model.ProductID" />
        </div>
    }
    <h3>
        <strong> @Model.Name</strong>
        <span class="pull-right label-pill label label-primary">@Model.Price.ToString("c")</span>
    </h3>



    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        <div class="float-right">
            @Html.HiddenFor(x => x.ProductID)
            @Html.Hidden("returnUrl" , Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-primary" value="Add to cart" />
        </div>
    }

    <span class="lead">@Model.Description</span>

</div>