@model IEnumerable<string>

<h6 class="dropdown-header">--All--</h6>
  
@Html.ActionLink("Home", "List", "Product", null,
     new { @class = "dropdown-item " +   (ViewBag.categorie == null ? "active" : "") })

<h6 class="dropdown-header">--Categories--</h6>

@foreach (var link in Model)
{
        @Html.RouteLink(link, new
   {
       controller = "Product",
       action = "List",
       category = link,
       page = 1
   },
  new { @class = "dropdown-item " + (link == ViewBag.categorie ? "active" : "") }
    )
}
